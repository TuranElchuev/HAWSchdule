<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_calendar_width"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/app_main_color">

    <TextView
        android:id="@+id/file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center"
        android:textColor="@color/app_secondary_color"
        android:textStyle="bold"
        android:textSize="@dimen/text_large"/>

    <include layout="@layout/horizontal_separator"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center"
        android:text="@string/set_prority"
        android:textColor="@color/app_secondary_color"
        android:textSize="@dimen/text_normal"/>

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/low"
            android:layout_width="0dp"
            android:layout_height="@dimen/image_button_medium"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:src="@drawable/ic_low"
            android:scaleType="centerInside" 
            android:padding="@dimen/icon_large_padding"/>

        <ImageButton
            android:id="@+id/normal"
            android:layout_width="0dp"
            android:layout_height="@dimen/image_button_medium"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:src="@drawable/ic_medium"
            android:scaleType="centerInside" 
            android:padding="@dimen/icon_large_padding"/>

        <ImageButton
            android:id="@+id/high"
            android:layout_width="0dp"
            android:layout_height="@dimen/image_button_medium"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:src="@drawable/ic_high"
            android:scaleType="centerInside" 
            android:padding="@dimen/icon_large_padding"/>

    </LinearLayout>

    <include layout="@layout/horizontal_separator"/>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/enable_disable"
            android:layout_width="0dp"
            android:layout_height="@dimen/image_button_medium"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:scaleType="centerInside" 
            android:padding="@dimen/icon_large_padding"/>


        <ImageButton
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="@dimen/image_button_medium"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:scaleType="centerInside" 
            android:src="@drawable/delete"
            android:padding="@dimen/icon_large_padding"/>
    </LinearLayout>

</LinearLayout>